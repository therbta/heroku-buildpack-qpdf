#!/bin/sh
BUILD_DIR=$1

QPDF_VERSION=12.2.0
QPDF_URL=https://github.com/qpdf/qpdf/releases/download/v${QPDF_VERSION}/qpdf-${QPDF_VERSION}-bin-linux-x86_64.tgz

echo "-----> Downloading qpdf ${QPDF_VERSION}"
curl -L ${QPDF_URL} | tar xz -C $BUILD_DIR

echo "-----> Making qpdf available in PATH"
mkdir -p $BUILD_DIR/.profile.d
echo "export PATH=\$PATH:\$HOME/qpdf-${QPDF_VERSION}/bin" > $BUILD_DIR/.profile.d/qpdf.sh
